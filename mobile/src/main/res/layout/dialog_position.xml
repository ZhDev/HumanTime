<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/table"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TableRow style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/top_right"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/top_center"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/top_left"
                style="?android:attr/buttonBarButtonStyle" />
        </TableRow>

        <TableRow style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/center_right"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/center_center"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/center_left"
                style="?android:attr/buttonBarButtonStyle" />
        </TableRow>

        <TableRow style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/bottom_right"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/bottom_center"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/bottom_left"
                style="?android:attr/buttonBarButtonStyle" />
        </TableRow>

    </TableLayout>

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/table"
        android:layout_alignTop="@+id/table"
        android:background="@android:color/holo_blue_dark" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/table"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_dark" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/table"
        android:layout_alignTop="@+id/table"
        android:background="@android:color/holo_blue_dark" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/table"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_dark" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_blue_dark" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/table"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_dark" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/table"
        android:layout_alignLeft="@+id/table"
        android:background="@android:color/holo_blue_dark" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/table"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_dark" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/table"
        android:layout_alignRight="@+id/table"
        android:background="@android:color/holo_blue_dark" />
</RelativeLayout>